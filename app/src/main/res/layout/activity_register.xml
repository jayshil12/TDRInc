<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jayshil.tdrinc.RegisterActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/signup_text" />

        <EditText
            android:id="@+id/name_register"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="50dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/email_register"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/name_register"
            android:layout_below="@+id/name_register"
            android:height="10dp"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="50dp" />

        <EditText
            android:id="@+id/password_register"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/email_register"
            android:layout_below="@+id/email_register"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="50dp" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_register"
            android:layout_alignTop="@+id/name_register"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/name_icon" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/name_register"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/gmail" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView6"
            android:layout_below="@+id/email_register"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/password_logo" />

        <EditText
            android:id="@+id/con_pass_register"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/password_register"
            android:layout_below="@+id/password_register"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="50dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView7"
            android:layout_below="@+id/password_register"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/password_logo" />

        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/signin_button"
            android:text="Sign Up"
            android:layout_below="@+id/con_pass_register"
            android:layout_centerHorizontal="true"
            android:onClick="registerClick"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:text="Already Registered? Click here"
            android:layout_below="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:onClick="signIn"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
